<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cinderela"
            android:text=" Create Trip "
            android:textColor="@color/text"
            android:textSize="60sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/layout_top"
        android:padding="20dp">

        <EditText
            android:id="@+id/editTextTripName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textbox"
            android:hint="Trip name"
            android:textColorHint="@color/text"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/box_dark"
        android:padding="20dp">

        <EditText
            android:id="@+id/editTextTripLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textbox"
            android:hint="Trip destination"
            android:textColorHint="@color/text"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:padding="20dp"
        android:background="@color/box_dark">

        <EditText
            android:id="@+id/editTextTripInformation"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@drawable/textbox"
            android:gravity="top"
            android:hint="Trip information"
            android:inputType="text|textMultiLine"
            android:textColorHint="@color/text"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/layout_bot">


        <Button
            android:layout_marginBottom="10dp"
            android:id="@+id/buttonCreate"
            android:layout_width="143dp"
            android:layout_height="59dp"
            android:layout_centerHorizontal="true"
            android:text="Create"
            android:textColor="@color/background"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="#00FFFFFF" />
    </RelativeLayout>

</LinearLayout>